<div class="fixed w-full z-50">
  <div class="text-gohun bg-opacity-0 flex justify-center">
    <div class="container px-2">
      <div class="navbar">
        <div class="navbar-start">
          <div class="dropdown">
            <%= link_to root_path, data: {turbo: false} do%>
              <%= image_tag "logo.png", class: "left-0 ml-6 h-10 my-2 w-auto inline-block"%>
            <% end %>
          </div>
        </div>
        <div class="navbar-end">
          <div class="drawer drawer-end">
            <input id="my-drawer-4" type="checkbox" class="drawer-toggle" />
            <div class="drawer-content flex justify-end mr-3">
              <%= render "shared/search_modal"%>
              <label for="my-drawer-4" class="drawer-button btn btn-ghost btn-circle ">
                <div tabindex="0" role="button" class="btn btn-ghost btn-circle">
                  <svg class="fill-current" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 512 512"><path d="M64,384H448V341.33H64Zm0-106.67H448V234.67H64ZM64,128v42.67H448V128Z"/></svg>
                </div>
              </label>
            </div> 
            <div class="drawer-side">
              <label for="my-drawer-4" aria-label="close sidebar" class="drawer-overlay"></label>
              <ul class="menu p-4 w-full min-h-full bg-sumi text-base-content">
              <input id="my-drawer-4" type="checkbox" class="drawer-toggle" />
              <div class="drawer-content flex justify-end mr-3">
                <label for="my-drawer-4" class="drawer-button btn btn-ghost btn-circle ">
                  <div tabindex="0" role="button" class="btn btn-ghost btn-circle">
                    <svg class="fill-current" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 512 512"><polygon points="400 145.49 366.51 112 256 222.51 145.49 112 112 145.49 222.51 256 112 366.51 145.49 400 256 289.49 366.51 400 400 366.51 289.49 256 400 145.49"/></svg>
                  </div>
                </label>
              </div> 
              <div class="flex flex-col items-center z-50">
                <%if user_authenticate_signed_in?%>
                  <li><%= link_to "TOP", root_path%></li>
                  <li><%= link_to "投稿", new_post_path, data: {turbo: false}%></li>
                  <li><%= link_to "マイページ", user_path(current_user_authenticate.user_id) %></li>
                  <li><%= link_to "周辺検索", locations_search_path, data: {turbo: false}%></li>
                  <li><a href="#">ブックマーク</a></li>
                  <li><%= link_to "ログアウト", destroy_user_authenticate_session_path, data: {turbo_method: :delete}%></li>
                <%else%>
                  <li><%= link_to "TOP", root_path%></li>

                  <li><%= link_to "周辺検索", locations_search_path, data: {turbo: false}%></li>
                  <li><%= link_to "ログイン", new_user_authenticate_session_path, data: {turbo: false}%></li>
                <%end%>
              </div>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
