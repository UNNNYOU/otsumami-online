<style>
		.animated {
			-webkit-animation-duration: 1s;
			animation-duration: 1s;
			-webkit-animation-fill-mode: both;
			animation-fill-mode: both;
		}

		.animated.faster {
			-webkit-animation-duration: 500ms;
			animation-duration: 500ms;
		}

		.fadeIn {
			-webkit-animation-name: fadeIn;
			animation-name: fadeIn;
		}

		.fadeOut {
			-webkit-animation-name: fadeOut;
			animation-name: fadeOut;
		}

		@keyframes fadeIn {
			from {
				opacity: 0;
			}

			to {
				opacity: 1;
			}
		}

		@keyframes fadeOut {
			from {
				opacity: 1;
			}

			to {
				opacity: 0;
			}
		}
	</style>
<div data-controller="search-modal">
	<div>
    <button data-action="search-modal#openModal" class='btn btn-ghost btn-circle text-white p-2 text-2xl font-bold'>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
    </button>
	</div>
	<div data-search-target="main-modal" class="main-modal fixed w-full h-100 inset-0 z-50 overflow-hidden flex justify-center items-center animated fadeIn faster hidden"
		style="background: rgba(0,0,0,.7);">
		<div
			class="border shadow-lg modal-container bg-kuro w-11/12 md:max-w-md mx-auto rounded shadow-lg z-50 overflow-y-auto">
			<div class="modal-content py-4 text-left px-6">
				<!--Title-->
        <div class="flex justify-end items-center pb-2">
					<button data-action="search-modal#modalClose" class="modal-close cursor-pointer z-50">
						<svg class="fill-current text-black" xmlns="http://www.w3.org/2000/svg" width="18" height="18"
							viewBox="0 0 18 18">
							<path
								d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z">
							</path>
						</svg>
					</button>
				</div>
				<!--Body-->
        <p class="text-lg text-center">検索</p>
				<%= search_form_for @q, url: posts_path do |f| %>
          <div class="flex flex-col items-center text-kuro">
            <% f.label :prefecture_name_cont %>
            <%= f.search_field :prefecture_name_cont, class: "w-full px-2 py-1 mt-2 bg-gohun text-center rounded-sm", placeholder: "都道府県" %>

            <% f.label :title_or_body_cont %>
            <%= f.search_field :title_or_body_cont, class: "w-full px-2 py-1 mt-4 bg-gohun text-center rounded-sm", placeholder: "フリー検索" %>

            <%= f.submit "検索", class: "w-1/2 px-2 py-1 mt-4 bg-gohun text-center rounded-sm" %>
          </div>
        <% end %>
			</div>
		</div>
	</div>
</div>
